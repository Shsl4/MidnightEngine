set(GLFW_VERSION 3.3.5)

file(GLOB_RECURSE GLFW_SOURCES ${CMAKE_CURRENT_LIST_DIR}/glfw-${GLFW_VERSION}/include/*.h*)

if(WIN32)

set(GLFW_LIB ${CMAKE_CURRENT_LIST_DIR}/glfw-${GLFW_VERSION}/lib/Windows/x64/glfw3.lib)
set(GLFW_DYLIB ${CMAKE_CURRENT_LIST_DIR}/glfw-${GLFW_VERSION}/bin/Windows/x64/glfw3.dll)

elseif (APPLE) 

set(GLFW_LIB ${CMAKE_CURRENT_LIST_DIR}/glfw-${GLFW_VERSION}/lib/macOS/Universal/libglfw3.a)
set(GLFW_DYLIB ${CMAKE_CURRENT_LIST_DIR}/glfw-${GLFW_VERSION}/lib/macOS/Universal/libglfw3.dylib)

elseif (LINUX)

set(GLFW_LIB ${CMAKE_CURRENT_LIST_DIR}/glfw-${GLFW_VERSION}/lib/Linux/x64/libglfw3.a)
set(GLFW_DYLIB ${CMAKE_CURRENT_LIST_DIR}/glfw-${GLFW_VERSION}/lib/macOS/Universal/libglfw3.so)

endif()

set(THIRD_PARTY_SOURCES ${THIRD_PARTY_SOURCES} ${GLFW_SOURCES})

set(THIRD_PARTY_DEBUG_LIBS ${THIRD_PARTY_DEBUG_LIBS} ${GLFW_LIB})
set(THIRD_PARTY_RELEASE_LIBS ${THIRD_PARTY_RELEASE_LIBS} ${GLFW_LIB})

set(THIRD_PARTY_DEBUG_DYLIBS ${THIRD_PARTY_DEBUG_DYLIBS} ${GLFW_DYLIB})
set(THIRD_PARTY_RELEASE_DYLIBS ${THIRD_PARTY_RELEASE_DYLIBS} ${GLFW_DYLIB})

set(THIRD_PARTY_INCLUDE_PATH ${THIRD_PARTY_INCLUDE_PATH} "${CMAKE_CURRENT_LIST_DIR}/glfw-${GLFW_VERSION}/include/")

message(STATUS "Included GLFW module version " ${GLFW_VERSION}.)
