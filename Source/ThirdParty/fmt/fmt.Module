set(FMT_VERSION 8.0.1)

file(GLOB_RECURSE FMT_HEADERS ${CMAKE_CURRENT_LIST_DIR}/fmt-${FMT_VERSION}/include/*.h*)
set(THIRD_PARTY_HEADERS ${THIRD_PARTY_HEADERS} ${FMT_HEADERS})

if(WIN32)
set(FMT_DEBUG_LIB ${CMAKE_CURRENT_LIST_DIR}/fmt-${FMT_VERSION}/lib/Windows/x64/Debug/fmtd.lib)
set(FMT_RELEASE_LIB ${CMAKE_CURRENT_LIST_DIR}/fmt-${FMT_VERSION}/lib/Windows/x64/Release/fmt.lib)
elseif (APPLE) 
set(FMT_DEBUG_LIB ${CMAKE_CURRENT_LIST_DIR}/fmt-${FMT_VERSION}/lib/macOS/Universal/Debug/libfmtd.a)
set(FMT_RELEASE_LIB ${CMAKE_CURRENT_LIST_DIR}/fmt-${FMT_VERSION}/lib/macOS/Universal/Release/libfmt.a)
elseif (LINUX)
set(FMT_DEBUG_LIB ${CMAKE_CURRENT_LIST_DIR}/fmt-${FMT_VERSION}/lib/Linux/x64/libfmt.a)
set(FMT_RELEASE_LIB ${CMAKE_CURRENT_LIST_DIR}/fmt-${FMT_VERSION}/lib/Linux/x64/libfmt.a)
endif()

set(THIRD_PARTY_DEBUG_LIBS ${THIRD_PARTY_DEBUG_LIBS} ${FMT_DEBUG_LIB})
set(THIRD_PARTY_RELEASE_LIBS ${THIRD_PARTY_RELEASE_LIBS} ${FMT_RELEASE_LIB})

set(THIRD_PARTY_INCLUDE_PATH ${THIRD_PARTY_INCLUDE_PATH} "${CMAKE_CURRENT_LIST_DIR}/fmt-${FMT_VERSION}/include/")

message(STATUS "Included fmt module version " ${FMT_VERSION}.)